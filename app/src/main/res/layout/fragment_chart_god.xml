<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_god"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.linheimx.app.plus.LineChartPlus
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"></com.linheimx.app.plus.LineChartPlus>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary"></View>

        <com.linheimx.app.library.charts.LineChart
            android:id="@+id/chart2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:god_mode="true"></com.linheimx.app.library.charts.LineChart>
    </LinearLayout>

</RelativeLayout>
